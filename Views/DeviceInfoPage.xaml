<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABFReportEditor.Views.DeviceInfoPage"
             Title="Device Information">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="20">
            <Entry Placeholder="Water Purveyor"/>
            <Entry Placeholder="Assembly Address"/>
            <Entry Placeholder="On Site Location of Assembly"/>
            <Entry Placeholder="Primary Service at Location"/>
            <Entry Placeholder="Installation Status"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Entry Placeholder="Water Meter No." Grid.Column="0"/>
                <Entry Placeholder="Serial No." Grid.Column="1"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Entry Placeholder="Model No." Grid.Column="0"/>
                <Entry Placeholder="Size" Grid.Column="1"/>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Entry Placeholder="Manufacturer" Grid.Column="0"/>
                <Entry Placeholder="Type" Grid.Column="1"/>
            </Grid>

            <Button Text="Next" 
                    Margin="0,20,0,0"
                    Clicked="OnNextClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
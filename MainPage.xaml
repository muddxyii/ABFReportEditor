<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReportFlow.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Welcome to&#10;Report Flow!"
                Style="{StaticResource SubHeadline}"/>

            <Grid
                RowSpacing="25"
                VerticalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button
                    Grid.Row="0"
                    x:Name="OpenPdfBtn"
                    Text="Open Report" 
                    Clicked="OnOpenPdfClicked"/>
                
                <Button
                    Grid.Row="1"
                    x:Name="CreatePdfBtn"
                    Text="Create New Report" 
                    Clicked="OnCreatePdfClicked"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
